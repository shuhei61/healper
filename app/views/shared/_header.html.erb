<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to "HealPer", "/", class:"top-title"%>
      </div>
      <% if user_signed_in? %>
        <div class="nav__right">
          <%= link_to current_user.nickname, "#", class: "user-nickname" %>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: :nav__logout %>
        </div>
      <% else %>
        <div class="nav__right">
          <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
          <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
        </div>
      <% end %>
    </div>
  </div>
</header>