<div class="main-double">
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー新規登録
    </h1>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
</div>

<div class='form-wrap'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) taro", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span><span class='info-text'>  ※英字と数字の両方必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">必須</span>
    </div>
    <div class="input-select">
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {id:"gender"}) %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">年齢</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :age, class:"input-default", placeholder:"例) 30", id:"age" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">身長(cm)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :height, class:"input-default", placeholder:"例) 165", id:"height" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">体重(kg)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :weight, class:"input-default", placeholder:"例) 55", id:"weight" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">活動レベル</label>
      <span class="indispensable">必須</span>
    </div>
    <div class="input-select">
      <%= f.collection_select(:level_id, Level.all, :id, :name, {}, {id:"level"}) %>
    </div>
  </div>

  <div class='register-btn'>
    <%= f.submit "新規登録" ,class:"register-red-btn" %>
  </div>
<% end %>
</div>
</div>
